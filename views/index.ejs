<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css" />
    <!-- <script src="script.js" defer></script> -->
    <title>Mart</title>
</head>
<body>
    <section class="left">
        <h3>History</h3>
    </section>
    <section class="right">
        <form action="/upload" method="post" enctype="multipart/form-data">
            <input type="file" id="csv" name="csv">
            <input type="submit" id="submit">
        </form>
        <div clas="main">
            <h2>Upload File to view</h2>
            <% if (idArr !== false) { %>
                <table>
                    <tr>
                        <th>Order ID</th>
                        <th>Customer Name</th>
                        <th>Total Price</th>
                        <th>Invoice</th>
                    </tr>
                    <% for( let i = 0; i < idArr.length; i++ ) { %>
                    <tr>
                        <td><%= idArr[i] %></td>
                        <td><%= nameArr[i] %></td>
                        <td><%= totalArr[i] %></td>
                        <td>
                            <form action="/invoice/<%= idArr[i] %>" method="get" enctype="application/json">
                                <button type="submit" id="invoice">View</button>
                            </form>
                        </td>
                    </tr>
                    <% } %>
                 </table>
            <% } else if(invoice) { %>
                <div>
                    <%= invoice %>
                </div>
            <% } %>
        </div>
    </section>
</body>
</html>